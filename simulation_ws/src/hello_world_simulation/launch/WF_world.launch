<launch>
  <!-- Always set GUI to false for AWS RoboMaker Simulation
       Use gui:=true on roslaunch command-line to run with a gui.
  -->
  <arg name="gui" default="false"/>

  <!-- Set WORLD_ID to default_world if worldId envvar is not defined,
       default_world should refer to a default world during exporting process for worldforge
  -->
  <arg name="worldId" default="$(optenv WORLD_ID default)" doc="WorldId to load"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find aws_robomaker_worldforge_worlds)/worlds/$(arg worldId)/$(arg worldId).world"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="$(arg gui)"/>
    <arg name="verbose" default="true"/>
  </include>

  <!-- Spawn Robot -->
  <include file="$(find turtlebot3_description_reduced_mesh)/launch/spawn_turtlebot.launch">
    <!-- Override arg parameters here e.g,
          <arg name="x_pos" default="10.0"/>
          <arg name="y_pos" default="5.0"/>
     -->
  </include>
</launch>
